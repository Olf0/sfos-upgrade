#!/bin/sh
set -uC

# Exit codes
# 0       : Everything went fine
# 1 - 119 : Failed to tidy N extant logfiles
# 120     : Failed to tidy 120 or more extant logfiles
# 121     : Not a single logfile to tidy found
# 123     : Log directory is not accessible
# 124     : Error parsing parameters
# 126     : Help called

export LANG="C"  # Engineering English only
export LC_CTYPE="POSIX"
export LC_COLLATE="POSIX"

called="$(basename "$0")"
retc=0
if [ -z "$*" ]
then logdir="/var/log"
else
  logdir="$1"
  shift
  if [ "$logdir" = "-h" ] || [ "$logdir" = "--help" ]
  then retc=126
  elif [ ! -d "$logdir" ]
  then
    echo "$logdir is not a directory!" >&2
    retc=123
  fi
  if [ -n "$*" ]
  then
    echo "No extra parameters expected, but set: $*" >&2
    retc=124
  fi
  if [ $retc != 0 ]
  then
    echo "Usage: $called [<logdirectory>|--help|-h]"
    echo "Without a parameter it will use /var/log as log directory."
    exit $retc
  fi
fi

cd "$logdir" || exit 123

# Removing stale metadata downloads left over by version --dup
# rm -rf UpdateTestcase-*

if ! set -o pipefail
then echo "Notice: This shell does not support \"-o pipefail\"." >&2
fi

logs_count=0
logs_success=0
logs_nodelete=0
logs_failed=0
targets="systemupdate_*.log-dupes.txt"
for logfile in $targets
do
  if [ "$logfile" != "$targets" ]
  then
    echo -n "$logfile"
    logs_count="$(expr "$logs_count" '+' "1")"
    tidied_log="$(echo "$logfile" | rev | cut -f 2- -d '-' | rev).txt"
    if sed 's/\cM//g' "$logfile" | sed 's/Installing: [0-9][0-9]*%\x1b\[K//g' | sed 's/\x1b\[K/\n/g' | sed 's/^\[[0-9][0-9]* %] //g' | sed 's/: \[[0-9][0-9]* %]$//g' | sed 's/: [0-9][0-9]*%$//g' | uniq > "$tidied_log"
    then 
      if rm "$logfile" 2> /dev/null
      then
        logs_success="$(expr "$logs_success" '+' "1")"
        echo " tidied successfully."
      else
        logs_nodelete="$(expr "$logs_nodelete" '+' "1")"
        echo " tidied, but failed to remove it."
      fi
    else
      rm -f "$tidied_log"
      logs_failed="$(expr "$logs_failed" '+' "1")"
      echo " tidying failed!"
    fi
  else retc=121
  fi
done

      if [ "$retc" -lt "120" ]
      then retc="$(expr "$retc" '+' "1")"
      fi
      
case "$retc" in
[1-9]|[1-9][0-9]|1[0-1][0-9])
  echo "Warning: Failed to tidy $retc of $logs_count log file(s) in $logdir : The(se) untidied file(s) remain(s)!" >&2
  ;;
120)
  echo "Warning: Failed to tidy 120 or more of $logs_count log files in $logdir : These untidied files remain!" >&2
  ;;
121)
  echo "Notice: Found no log file to tidy in $logdir ." >&2
  ;;
# *)  # Omitting general case.
  # For 0 (all fine) and other (unlikely) cases, which got this far: Do nothing.
# ;;
esac

exit "$retc"

